<form method="POST" action="/newRecipe">
  <label for="title">Title</label>
  <input type="text" name="title"
    id="title">

  <label for="cookingTime">Cooking
    Time</label>
  <input type="number"
    name="cookingTime" id="cookingTime">

  <label for="numberOfPeople">Number of
    people</label>
  <input type="number"
    name="numberOfPeople"
    id="numberOfPeople" min="1">

  <label
    for="description">recipe</label>
  <textarea name="description" rows="10"
    cols="30"
    placeholder="Your recipe here"></textarea>



  <button type="submit">Save</button>
</form>

<div id="carouselExampleSlidesOnly"
  class="carousel slide"
  data-ride="carousel">
  <div class="carousel-inner">
    {{#each flowers}}
    <div class="carousel-item active">
      <img src="{{this.img}}"
        class="d-block w-100" alt="flo">
      <p>{{this.name}}</p>
    </div>
    {{/each}}
  </div>
</div>

