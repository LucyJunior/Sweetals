
<form method="POST" action="/flowerInfo/{{flowerId}}/newRecipe">
  <label for="title">Title</label>
  <input type="text" name="title"
    id="title">

  <label for="cookingTime">Cooking
    Time</label>
  <input type="number"
    name="cookingTime" id="cookingTime">

  <label for="numberOfPeople">Number of
    people</label>
  <input type="number"
    name="numberOfPeople"
    id="numberOfPeople" min="1">

  <label
    for="description">recipe</label>
  <textarea name="description" rows="10"
    cols="30"
    placeholder="Your recipe here"></textarea>
  {{!-- //when the user submits this form, how will we pass the flower details ? --}}

  {{!--<a href="/newRecipe/{{userData}}/userRecipe"></a> --}}
  <button type="submit">Save</button>
</form>

{{!--new--}}
<div>
{{#if showSuccessMessage}}
<p>You create a recipe!</p>
{{/if}}

{{#if showFailureMessage}}
<p>Something went wrong dude<p>
{{/if}}
</div>

