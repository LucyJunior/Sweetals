  <form method="POST" action="/edit/{{recipe._id}}">
  <label for="title">Title</label>
  <input value="{{recipe.title}}" type="text" name="title"
    id="title">

  <label for="cookingTime">Cooking
    Time</label>
  <input value="{{recipe.cookingTime}}" type="number"
    name="cookingTime" id="cookingTime">

  <label for="numberOfPeople">Number of
    people</label>
  <input value="{{recipe.numberOfPeople}}" type="number"
    name="numberOfPeople"
    id="numberOfPeople" min="1">

 <label
    for="ingredients">Ingredients</label>
  <textarea  name="ingredients" rows="10"
    cols="30"
    placeholder="Ingredients">{{recipe.ingredients}}</textarea>

  <label
    for="preparation">Preparation</label>
  <textarea  name="preparation" rows="10"
    cols="30"
    placeholder="Your recipe here">{{recipe.preparation}}</textarea>

  <a href="/finalRecipe/{{recipe._id}}"></a><button type="submit">Save</button>
</form>
